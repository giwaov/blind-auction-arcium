{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "og-fact-checker/Dockerfile"
  },
  "deploy": {
    "startCommand": "cd og-fact-checker && gunicorn --bind 0.0.0.0:$PORT --workers 1 --timeout 120 api_server:app",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
